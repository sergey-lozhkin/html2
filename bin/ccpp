#!/bin/bash

. ~/.bashrc

NOTES="$HOME/notes"
SPECS="$HOME/notes/specification"
GITHUB="$HOME/projects/github/html-3a1cf746"

function rrss () {
  local COMMIT="$1"
  local COMMENT="$2"
  echo
  cyan "---" "$COMMIT" "---" "$COMMENT" "---"
  bexec git -C "$NOTES" co --detach "$COMMIT"
  bexec git -C "$GITHUB" rm -rf $(git -C "$GITHUB" ls-files)
  green -- git -C "$SPECS" ls-files -z \| rsync -avAX --delete --relative --from0 --files-from=- "$SPECS" "$GITHUB"
  git -C "$SPECS" ls-files -z | rsync -avAX --delete --relative --from0 --files-from=- "$SPECS" "$GITHUB"
  bexec git -C "$GITHUB" add --force .
  bexec git -C "$GITHUB" com -m "$COMMENT"
  read
}

